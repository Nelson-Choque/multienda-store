---
interface Props {
  imgUrl: string;
  brand: string;
  title: string;
  price: number;
}

const { imgUrl, brand, title, price } = Astro.props;
---

<article class="bg-white rounded-2xl overflow-hidden">
  <a href="/product">
    <img class="p-1 w-full" src={imgUrl} alt="" />
    <div class="body p-2">
      <h3 class="opacity-30 uppercase">{brand}</h3>
      <p class="text-base">{title}</p>
      <div class="flex justify-between mt-2">
        <p class="text-pink-400 text-xl font-bold">S/{price}</p>
        <div
          class="w-8 h-8 bg-pink-400 rounded-full text-white flex justify-center items-center"
        >
          <i class="fa-solid fa-plus"></i>
        </div>
      </div>
    </div></a
  >
</article>
